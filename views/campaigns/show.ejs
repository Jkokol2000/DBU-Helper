<%- include('../partials/header') %>

    <div class="campaign-details">
        <h1>
            <%= campaign.name %>
        </h1>
        <p>
            <%= campaign.description %>
        </p>
        <h3>Current Characters</h3>
        <p>
            <%= campaign.characters %>
        </p>
    </div>
    <% if (isCreator === false) { %>
        <form action="/campaign/<%= campaign._id %>/characters/add" method="POST">
            <select name="characterId">
                <% for (var i = 0; i < campaign.characters.length; i++) { %>
                    <option value="<%= campaign.characters[i]._id %>">
                        <%= campaigns.characters[i].name %>
                    </option>
                <% } %>
            </select>
            <button type="submit">Add Character</button>
        </form>
    <% } %>


    <% if (isCreator === true) { %>
        <form action="/campaigns/<%= campaign._id %>?_method=DELETE" method="POST">
            <button  type="submit" onclick="return confirm('Are you sure you want to delete this campaign?');">Delete this Campaign</button>
        </form>
        <% } %>
    

<%- include('../partials/footer') %>