<%- include('../partials/header') %>
<div class="container">
  <h1 class="mt-5">Create New Character</h1>
  <form class="mt-5" action="/characters" method="post">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Enter name">
    </div>
    <div class="form-group">
      <label for="primary-stat">Primary Stat (base stat 8):</label>
      <select class="form-control" id="primary-stat" name="primaryStat">
        <option selected value="agility">Agility</option>
        <option value="force">Force</option>
        <option value="tenacity">Tenacity</option>
        <option value="scholarship">Scholarship</option>
        <option value="insight">Insight</option>
        <option value="spirit">Spirit</option>
        <option value="personality">Personality</option>
      </select>
    </div>
    <div class="form-group">
      <label for="secondary-stat">Secondary Stat (base stat 6):</label>
      <select class="form-control" id="secondary-stat" name="secondaryStat">
        <option value="agility">Agility</option>
        <option selected value="force">Force</option>
        <option value="tenacity">Tenacity</option>
        <option value="scholarship">Scholarship</option>
        <option value="insight">Insight</option>
        <option value="spirit">Spirit</option>
        <option value="personality">Personality</option>
      </select>
    </div>
    <div class="form-group">
      <label for="tertiary-stat">Tertiary Stat (base stat 4):</label>
      <select class="form-control" id="tertiary-stat" name="tertiaryStat">
        <option value="agility">Agility</option>
        <option value="force">Force</option>
        <option selected value="tenacity">Tenacity</option>
        <option value="scholarship">Scholarship</option>
        <option value="insight">Insight</option>
        <option value="spirit">Spirit</option>
        <option value="personality">Personality</option>
      </select>
    </div>
    <div class="form-group">
      <label for="race-selection">Race</label>
      <select class="form-control" id="race-selection" name="race">
        <option value="android">Android</option>
        <option value="arcosian">Arcosian</option>
        <option value="earthlingAgility">Earthling (increase Agility +4)</option>
        <option value="earthlingTenacity">Earthling (increase Tenacity +4)</option>
        <option value="majinForce">Majin (increase Force +4)</option>
        <option value="majinSpirit">Majin (increase Spirit +4)</option>
        <option value="namekianForce">Namekian (increase Force +2)</option>
        <option value="namekianSpirit">Namekian (increase Spirit +2)</option>
        <option value="neotuffle">Neo-Tuffle</option>
        <option value="saiyan">Saiyan</option>
        <option value="shadowDragonSpirit">Shadow Dragon (increase Force +4)</option>
        <option value="shadowDragonSpirit">Shadow Dragon (increase Spirit +4)</option>
      </select>
      <button type="submit" class="btn btn-primary">Create Character</button>
    </div>
</form>

<script>
  // Get references to the form and submit button
  const form = document.querySelector('form');
  const submitBtn = document.querySelector('button[type="submit"]');

  // Add an event listener to the form to listen for changes
  form.addEventListener('change', () => {
    // Get references to the select elements
    const primaryStat = document.querySelector('#primary-stat');
    const secondaryStat = document.querySelector('#secondary-stat');
    const tertiaryStat = document.querySelector('#tertiary-stat');

    // Check if any of the selected options are the same
    if (primaryStat.value === secondaryStat.value || primaryStat.value === tertiaryStat.value || secondaryStat.value === tertiaryStat.value) {
      // Disable the submit button if any of the selected options are the same
      submitBtn.disabled = true;
    } else {
      // Enable the submit button if none of the selected options are the same
      submitBtn.disabled = false;
    }
  });
</script>
<%- include('../partials/footer') %>